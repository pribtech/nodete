<command name="serviceHadoop" title="Hadoop Services">
	<text>sudo /sbin/service</text>
	<select>
		<option default="true">
			<text>hadoop-jobtracker</text>
		</option> 
		<option>
			<text>hadoop-secondarynamenode</text>
		</option> 
		<option>
			<text>hadoop-tasktracker</text>
		</option> 
		<option>
			<text>hadoop-historyserver</text>
		</option> 
		<option>
			<text>hadoop-datanode</text>
		</option> 
	</select>
	<select>
		<option default="true">
			<text>start</text>
		</option> 
		<option>
			<text>stop</text>
		</option> 
		<option>
			<text>status</text>
		</option> 
		<option>
			<text>restart</text>
		</option> 
	</select>
</command>