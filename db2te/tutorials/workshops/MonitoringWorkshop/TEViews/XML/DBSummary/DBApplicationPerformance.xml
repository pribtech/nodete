<table name="DBApplicationPerformance">
	<sql_name>DBApplicationPerformance</sql_name>
	<singular_name>Application performance database-wide</singular_name>
	<plural_name>Application performance database-wide</plural_name>
	<inlinequery>
<![CDATA[
  SELECT SUM(TOTAL_CPU_TIME) TOTAL_CPU_TIME,
       SUM(TOTAL_WAIT_TIME) TOTAL_WAIT_TIME,
	   SUM(TOTAL_APP_COMMITS) TOTAL_APP_COMMITS,
	   SUM(ROWS_READ) ROWS_READ, 
	   SUM(ROWS_MODIFIED) ROWS_MODIFIED
	FROM TABLE(MON_GET_SERVICE_SUBCLASS('', '',-2)) AS METRICS
]]>
	</inlinequery>
