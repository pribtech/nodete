<actionScript name="sqlExecutionForm" type="form" lockScreen="true">
    <message><![CDATA[?form?]]>
	</message>
	<parameterList>
		<parameter name="buttonOK" type="raw">
			<value>Execute</value>
		</parameter>
		<parameter name="button_Background" type="raw">
			<value>Execute Background</value>
		</parameter>
		<parameter name="button_AdHoc" type="raw">
			<value>Ad Hoc Panel</value>
		</parameter>
		<parameter name="parameter[form]" type="fixed">
			<value>?form?</value>
		</parameter>
	</parameterList>
	<if condition="false" compareOn="sqlExecutionForm.returnCode" compareOnType="returnObject">
		<task>
			<exit/>
		</task>
	</if>
	<if condition="AdHoc" compareOn="sqlExecutionForm.returnCode" compareOnType="returnObject">
		<task>
			<loadPage>
				<pageWindow target="adhocWindow">
					<panel name="main" PrimaryContainer="true">
						<link type="action" target="adhoc" window="_self" connectionRequired="y">
						<parameterList>
							<parameter name="action">ADHOC</parameter>
								<parameter name="LoadSQLData" type="double">?sql?</parameter>
								<parameter name="termChar" type="fixed">@</parameter>
							</parameterList>
						</link>
					</panel>
				</pageWindow>
			</loadPage>
			<exit/>
		</task>
	</if>
	<if condition="Background" compareOn="sqlExecutionForm.returnCode" compareOnType="returnObject">
		<task>
			<unlockScreen/>
		</task>
	</if>
	<task>
		<action name="execute" type="serverAction" >
			<parameterList>
				<parameter name="action" type="fixed">
					<value>executeSQL</value>
				</parameter>
				<parameter name="SQL" type="fixed">
					<value>?sql?</value>
				</parameter>
				<parameter name="STMTermChar" type="fixed">
					<value>@</value>
				</parameter>
			</parameterList>
		</action>
		<if condition="true" compareOn="execute.returnCode" compareOnType="returnObject">
			<task>
				<if condition="Background" compareOn="sql.returnCode" compareOnType="returnObject">
					<task>
						<panelReload/>
					</task>
				</if>
				<exit/>
			</task>
		</if>
		<assignSharedConstant name="ERROR_MESSAGE" type="returnObject">
			<value>execute.returnMessage</value>
		</assignSharedConstant>
		<alert>Failed: ?ERROR_MESSAGE?</alert>
	</task>
</actionScript>