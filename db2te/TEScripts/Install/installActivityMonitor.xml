<actionScript name="installActivityMonitor" type="form">
	<message><![CDATA[
<div style='width:500px'>
<p>Create the objects required for Activity Monitor</p>
<p>The task to create the tables may take a while.</p>
</div>
]]>
    </message>
    <parameterList>
		<parameter name="buttonOK" type="raw">
			<value>Install</value>
		</parameter>
	</parameterList>
	<if condition="true">
		<task>
			<action name="install" type="serverAction">
				<parameterList>
					<parameter name="action" type="fixed">
						<value>executeSQL</value>
					</parameter>
					<parameter name="SQL" type="fixed">
						<value>CALL SYSPROC.SYSINSTALLOBJECTS('AM', 'C', CAST (null AS VARCHAR(128)),   CAST (null AS VARCHAR(128)));</value>
					</parameter>
				</parameterList>
				<if condition="true" negCondition="true">
					<task>
						<assignSharedConstant name="ERROR_MESSAGE" type="returnObject">
							<value>install.returnValue.STMTMSG</value>
						</assignSharedConstant>
						<alert>Failed to create Activity Monitor objects : ?ERROR_MESSAGE?</alert>
					</task>
				</if>
				<if condition="true">
					<task>
						<alert>Activity Monitor objects created</alert>
					</task>
				</if>
			</action>
		</task>
	</if>
</actionScript>