		<type>n</type>
	</column>
	<column name="INSTANCE_NAME">
		<sqlName>INSTANCE_NAME</sqlName>
		<title>Instance Name</title>
		<type>s</type>
		<drillEnable/>
	</column>
	<column name="HOST_NAME">
		<sqlName>HOST_NAME</sqlName>
