<menu type="leaf" branchDirectory="">
	<description>Re-Org</description>
	<pageWindow target="_active">
				<panel name="main" PrimaryContainer="true">
					<link type="action" target="_self" window="_self" connectionRequired="y">
						<parameterList>
							<parameter name="action">chartNodal</parameter>
							<parameter name="$chartTitle">Auto Re-Org</parameter>
							<parameter name="sourceType">xmlData</parameter>
							<parameter name="$editMode">true</parameter>
							<parameter name="$definition">XSD/IBM/DB2AutoReorgPolicy.xsd</parameter>
							<parameter name="$report">XSL/chartNodalInternalXML2XML.xsl</parameter>
							<parameter name="$transform">XSL/removerEmptyOrNewLineTextNodes.xsl</parameter>
							<parameter name="$sourceType">SQL</parameter>
							<parameter name="$source">
<![CDATA[
CALL SYSPROC.AUTOMAINT_GET_POLICY( 'AUTO_REORG' , ?!name=result&value=unknown&precision=2000000&conversion=hex2string&dataType=string? ) 
]]>
							</parameter>
							<parameter name="$save">
<![CDATA[
CALL SYSPROC.AUTOMAINT_SET_POLICY( 'AUTO_REORG' ,  cast(cast(? as clob(1m)) as blob(1m)) ) 
]]>
							</parameter>
						</parameterList>
					</link>				
				</panel>
	</pageWindow>
</menu>