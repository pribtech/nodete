										<parameter name="action">connectionManager</parameter>
									</parameterList>
								</link>				
							</panel>
						</topPane>
						<bottomPane>
							<panel name="feedReader" PrimaryContainer="false">
								<link type="action" target="_self" window="_self" connectionRequired="y">
